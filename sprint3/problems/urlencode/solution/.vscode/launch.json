    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug urldecode",   // Название - выбираем сами, чтобы удобно искать
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/urlencode",    // Обязательно прописать путь к программе
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug tests",   // Название - выбираем сами, чтобы удобно искать
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/tests",    // Обязательно прописать путь к программе
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}